<%- include('../partials/head.ejs'); %>
<%- include('../partials/header.ejs'); %>

<% if(create) { %>
<%- include('../partials/steps.ejs') %>
<% } %>

<section class="album-details">
  <h1>Album details</h1>
  
  <% if(create) { %>
  <form action="/albums/new/details?id=<%= album.id %>&userId=<%= userId %>" method="post">
  <% } else { %>
  <form action="/albums/details?id=<%= album.id %>&userId=<%= userId %>" method="post">
  <% } %>
    <label for="name">Album name</label>
    <input type="text" name="name" id="name" value="<%= album.name %>">
    <% if(error && error === 'name') { %>
    <p class="error">Please enter a name for the album.</p>
    <% } %>
    <label for="description">Album description</label>
    <textarea name="description" id="description" value="<%= album.description %>"></textarea>
    <button type="submit"><%= create ? 'Add photos to album' : 'Save details' %></button>
  </form>

</section>

<%- include('../partials/footer.ejs'); %>