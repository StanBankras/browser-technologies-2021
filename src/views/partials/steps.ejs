<section class="steps">
  <ul>
    <li>
      <a href="/albums/new/details?id=<%= album.id %>&userId=<%= userId %>" class="<%= step === 'details' ? 'active' : step === 'upload' || step === 'sort' ? 'finished' : '' %>">
        <div class="number">1</div>
        <p>Details</p>
      </a>
    </li>
    <li>
      <% if(album.name) { %>
      <a href="/albums/new/upload?id=<%= album.id %>&userId=<%= userId %>" class="<%= step === 'upload' ? 'active' : step === 'sort' ? 'finished' : '' %>">
      <% } else { %>
      <a class="disabled">
      <% } %>
        <div class="number">2</div>
        <p>Upload photos</p>
      </a>
    </li>
    <li>
      <% if(album.photos.length > 0) { %>
      <a href="/albums/new/sort?id=<%= album.id %>&userId=<%= userId %>" class="<%= step === 'sort' ? 'active' : '' %>">
      <% } else { %>
      <a class="disabled">
      <% } %>
        <div class="number">3</div>
        <p>Order</p>
      </a>
    </li>
  </ul>
</section>